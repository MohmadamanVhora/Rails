<div class="d-flex justify-content-center">
  <% if event.errors.any? %>    
    <div class="alert alert-danger alert-dismissible fade show w-25" role="alert">            
      <ul>        
        <% event.errors.each do |error| %>          
          <li>            
            <%= error.full_message %>          
          </li>        
        <% end %>      
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>    
    </div>  
  <% end %>
</div>

<div class="d-flex justify-content-center text-center">
  <%= form_with model: event do |form| %>
    <div class="input-group mb-4">
      <label class="input-group-text">Name</label> 
      <%= form.text_field :name, :class => "form-control", :placeholder => "Enter Event Name"%>
    </div>

    <div class="input-group mb-4">
      <label class="input-group-text">Category</label> 
      <%= form.select :category_id, Category.pluck(:name, :id), { include_blank: "Select Category" }, :class => "form-control" %>
    </div>

    <div class="input-group mb-4">
      <label class="input-group-text">Description</label> 
      <%= form.text_field :description, :class => "form-control", :placeholder => "Enter Event Description"%>
    </div>

    <div class="input-group mb-4">
      <label class="input-group-text">Date</label> 
      <%= form.date_field :event_date, :class => "form-control", :placeholder => "Enter Event Date"%>
    </div>

    <%= form.submit value: text, :class => 'btn btn-dark my-3 px-3' %>
  <% end %>
</div>
