<table class="table container table-hover table-striped m-5">
  <tbody>
    <tr>
      <th scope="row">Name</th>
      <td><%= @author.first_name %></td>
    </tr>
    
    <tr>
      <th scope="row">Surname</th>
      <td><%= @author.last_name %></td>
    </tr>

    <tr>
      <th scope="row">Date of Birth</th>
      <td><%= @author.dob %></td>
    </tr>

    <tr>
      <th scope="row">Email</th>
      <td><%= @author.email %></td>
    </tr>
  </tbody>
</table>

<div class="container m-0 p-0">
  <%= link_to "Edit", edit_author_path(@author), :class => 'btn btn-dark ms-5 me-3 px-4' %>
  <%= link_to "Delete", author_path(@author), :class => 'btn btn-dark', data: {
    turbo_method: :delete,
    turbo_confirm: :"Are You Sure?"
  } %>
</div>
