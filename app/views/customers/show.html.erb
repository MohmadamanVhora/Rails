<div class="container justify-content-center my-5 col-6">
  <table class="table table-bordered table-hover table-striped">
    <tbody>
      <tr>
        <th class="col-3">Name</th>
        <td><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="col-3">Surname</th>
        <td><%= @customer.last_name %></td>
      </tr>    
      <tr>
        <th class="col-3">Email</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th class="col-3">Phone no</th>
        <td><%= @customer.phone_number %></td>
      </tr>
    </tbody>
  </table>

  <div class="my-4">
    <%= link_to raw('<i class="fa-solid fa-pen-to-square fa-2xl" style="color: #f4e32a;"></i>'), edit_customer_path(@customer), :class => "btn", title: "Edit" %>
    <%= link_to raw('<i class="fa-solid fa-trash-can fa-2xl" style="color: #f02828;"></i>'), customer_path(@customer), :class => "btn", title: "Remove", data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?" } %>
    <%= link_to raw('<i class="fa-solid fa-list fa-2xl" style="color: #12e4f3";></i>'), customers_path, :class => 'btn', title: "All" %>
  </div>
</div>
            