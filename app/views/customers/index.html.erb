<div class="container justify-content-center mt-5 text-center w-50">
  <div style="height:400px; overflow:auto;">
    <table class="table table-bordered container table-hover table-striped">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Surname</th>
          <th>Email</th>
          <th>Phone no</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.first_name %></td>
            <td><%= customer.last_name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone_number %></td>
            <td><%= link_to raw('<i class="fa-solid fa-eye fa-lg" style="color: #12e4f3;"></i>'), customer_path(customer), class: "btn m-0", title: "Show" %>
            <%= link_to raw('<i class="fa-solid fa-pen-to-square fa-lg" style="color: #f4e32a;"></i>'), edit_customer_path(customer), class: "btn", title: "Edit" %>
            <%= link_to raw('<i class="fa-solid fa-trash-can fa-lg" style="color: #f02828;"></i>'), customer_path(customer), class: "btn", title: "Remove", data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="mt-4">
    <%= link_to "Add", new_customer_path, class: "btn btn-info ms-3" %>
  </div>

  <div class="container justify-content-center mt-5 w-50">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td><%= link_to "most sales product by quantity", task_path(1) %></td>
        </tr>
        <tr>
          <td><%= link_to "most sales product by price", task_path(2) %></td>
        </tr>
        <tr>
          <td><%= link_to "most booked order of product", task_path(3) %></td>
        </tr>
        <tr>
          <td><%= link_to "most canceled order of product", task_path(4) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
