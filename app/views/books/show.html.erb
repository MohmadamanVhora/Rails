<table class="table container table-hover table-striped m-5">
  <tbody>
    <tr>
      <th scope="row">Book Name</th>
      <td><%= @book.name %></td>
    </tr>

    <tr>
      <th scope="row">Price</th>
      <td><%= @book.price %></td>
    </tr>

    <tr>
      <th scope="row">Author's Id</th>
      <td><%= @book.author_id %></td>
    </tr>
  </tbody>
</table>

<div class="container m-0 p-0">
  <%= link_to "Edit", edit_book_path(@book), :class => 'btn btn-dark ms-5 me-3 px-4' %>
  <%= link_to "Delete", book_path(@book), :class => 'btn btn-dark', data: {
    turbo_method: :delete,
    turbo_confirm: :"Are You Sure?"
  } %>
</div>
