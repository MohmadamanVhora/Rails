<div class="container justify-content-center my-5">
  <h1 class="container text-center text-decoration-underline my-5">All Books</h1>
  <table class="table table-bordered container table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Book Name</th>
        <th scope="col">Price</th>
        <th scope="col">Author's Id</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.price %></td>
          <td><%= book.author_id %></td>
          <td>
            <%= link_to "Show", book_path(book) %> | 
            <%= link_to "Edit", edit_book_path(book) %> | 
            <%= link_to "Delete", book_path(book), data: {
              turbo_method: :delete,
              turbo_confirm: :"Are You Sure?"
            } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <a href="/books/new"><input class="btn btn-dark my-3" type="submit" value="Add Book"></a>
</div>
