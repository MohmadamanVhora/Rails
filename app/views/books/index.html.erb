<table class="table container table-hover table-striped m-5">
  <thead>
    <tr>
      <th scope="col">Book Name</th>
      <th scope="col">Price</th>
      <th scope="col">Author's Id</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.price %></td>
        <td><%= book.author_id %></td>
        <td>
          <%= link_to "Show", book_path(book) %> | 
          <%= link_to "Edit", edit_book_path(book) %> | 
          <%= link_to "Delete", book_path(book), data: {
            turbo_method: :delete,
            turbo_confirm: :"Are You Sure?"
          } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="/books/new"><input class="btn btn-dark m-3 ms-5" type="submit" value="Add Book"></a>
