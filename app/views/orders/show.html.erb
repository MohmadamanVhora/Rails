<div class="container justify-content-center my-5 col-4">
  <table class="table table-bordered table-hover table-striped">
    <tbody>
      <tr>
        <th class="col-3">Product</th>
        <td><%= product_title(@order.product_id) %></td>
      </tr>
      <tr>
        <th class="col-3">Quantity</th>
        <td><%= @order.quantity %></td>
      </tr>
      <tr>
        <th class="col-3">Total Price</th>
        <td><%= @order.total_price %></td>
      </tr>    
      <tr>
        <th class="col-3">Status</th>
        <td><%= @order.order_status %></td>
      </tr>
      <tr>
        <th class="col-3">Customer</th>
        <td><%= @order.customer.first_name %> <%= @order.customer.last_name %></td>
      </tr>
      <tr>
    </tbody>
  </table>

  <div class="my-4">
    <%= link_to raw('<i class="fa-solid fa-pen-to-square fa-2xl" style="color: #f4e32a;"></i>'), edit_order_path(@order), :class => "btn", title: "Edit" %>
    <%= link_to raw('<i class="fa-solid fa-trash-can fa-2xl" style="color: #f02828;"></i>'), order_path(@order), data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?" } %>
    <%= link_to raw('<i class="fa-solid fa-list fa-2xl" style="color: #12e4f3;"></i>'), orders_path, :class => 'btn', title: "All" %>
  </div>
  <hr>
  <h1 class="mt-4">Customer</h1>
  <table class="table table-bordered table-hover table-striped">
    <tbody>
      <tr>
        <th class="col-3">Name</th>
        <td><%= @order.customer.first_name %></td>
      </tr>
      <tr>
        <th class="col-3">Surname</th>
        <td><%= @order.customer.last_name %></td>
      </tr>    
      <tr>
        <th class="col-3">Email</th>
        <td><%= @order.customer.email %></td>
      </tr>
      <tr>
        <th class="col-3">Phone no</th>
        <td><%= @order.customer.phone_number %></td>
      </tr>
    </tbody>
  </table>
</div>
