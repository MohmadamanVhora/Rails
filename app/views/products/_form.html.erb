<div class="d-flex justify-content-center">
  <% if product.errors.any? %>    
    <div class="alert alert-danger alert-dismissible fade show col-4" role="alert">            
      <ul>        
        <% product.errors.each do |error| %>          
          <li>            
            <%= error.full_message %>          
          </li>        
        <% end %>      
      </ul>      
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>    
    </div>  
  <% end %>
</div>

<div class="container text-center col-4">
  <%= form_with model: product do |form| %>
    <div class="input-group mb-4">
      <%= form.label :title, class: "input-group-text" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter Title" %>
    </div>

    <div class="input-group mb-4">
      <%= form.label :description, class: "input-group-text" %>
      <%= form.text_field :description, class: "form-control", placeholder: "Enter Description" %>
    </div>

    <div class="input-group mb-4">
      <%= form.label :price, class: "input-group-text" %>
      <%= form.number_field :price, min: 0, class: "form-control", placeholder: "Enter Price" %>
    </div>

    <div class="input-group mb-4">
      <%= form.label :capacity, class: "input-group-text" %>
      <%= form.number_field :capacity, min: 0, class: "form-control", placeholder: "Enter Capacity" %>
    </div>

    <div class="input-group mb-4">
      <%= form.label :is_active, 'Active', class: "input-group-text" %>
      <div class="m-auto ms-3">
        <%= form.radio_button :is_active, 'true' %>
        <%= form.label 'True' %>
        <%= form.radio_button :is_active, 'false' %>
        <%= form.label 'False' %>
      </div>
    </div>

    <div class="input-group mb-4">
      <%= form.label 'Status', class: "input-group-text" %>
      <%= form.select :product_status, Product.statuses, { include_blank: 'Select Status' }, class: "form-control" %>
    </div>

    <%= form.submit value: text, class: 'btn btn-info px-3' %>
  <% end %>
</div>
