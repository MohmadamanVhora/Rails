<div class="container justify-content-center my-5 col-5">
  <h2>Product</h2>
  <table class="table table-bordered table-hover table-striped">
    <tbody>
      <tr>
        <th class="col-3">Title</th>
        <td><%= @product.title %></td>
      </tr>
      <tr>
        <th class="col-3">Description</th>
        <td><%= @product.description %></td>
      </tr>    
      <tr>
        <th class="col-3">Price</th>
        <td><%= @product.price %></td>
      </tr>
      <tr>
        <th class="col-3">Capacity</th>
        <td><%= @product.capacity %></td>
      </tr>
      <tr>
        <th class="col-3">Active</th>
        <td><%= @product.is_active ? 'True' : 'False' %></td>
      </tr>
      <tr>
        <th class="col-3">Status</th>
        <td><%= @product.product_status %></td>
      </tr>
      <tr>
        <th class="col-3">Total Orders</th>
        <td><%= @product.orders.count %></td>
      </tr>
    </tbody>
  </table>

  <div class="my-4">
    <%= link_to raw('<i class="fa-solid fa-pen-to-square fa-2xl" style="color: #f4e32a;"></i>'), edit_product_path(@product), :class => "btn", title: "Edit" %>
    <%= link_to raw('<i class="fa-solid fa-trash-can fa-2xl" style="color: #f02828;"></i>'), product_path(@product), :class => "btn", title: "Remove", data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?" } %>
    <%= link_to raw('<i class="fa-solid fa-list fa-2xl" style="color: #12e4f3;"></i>'), products_path, :class => 'btn', title: "All" %>
  </div>

  <table class="table table-bordered container table-hover table-striped">
    <h2>Orders</h2>
    <thead class="table-dark">
      <tr>
        <th>Customer</th>
        <th>Quantity</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @product.orders.each do |order| %>
        <tr>
          <td><%= order.customer.first_name %> <%= order.customer.last_name %></td>
          <td><%= order.quantity %></td>
          <td><%= order.total_price %></td>
          <td><%= order.order_status %></td>
          <td><%= link_to raw('<i class="fa-solid fa-eye fa-lg" style="color: #12e4f3;"></i>'), order_path(order), class: "btn m-0", title: "Show" %>
          <%= link_to raw('<i class="fa-solid fa-pen-to-square fa-lg" style="color: #f4e32a;"></i>'), edit_order_path(order), class: "btn", title: "Edit" %>
          <%= link_to raw('<i class="fa-solid fa-trash-can fa-lg" style="color: #f02828;"></i>'), order_path(order), class: "btn", title: "Remove", data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
